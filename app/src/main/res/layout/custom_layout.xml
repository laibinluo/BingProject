<?xml version="1.0" encoding="utf-8"?>
<luo.bing.com.bingproject.testView.CustomImgContainer
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/luo.bing.com.bingproject"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright">


    <luo.bing.com.bingproject.testView.CustomTitleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:titleTextSize="30sp"
        custom:titleTextColor="@android:color/black"
        custom:titleText="CustomTitleView"
        android:background="@android:color/holo_red_dark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@android:color/holo_orange_dark"
        android:text="1"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@android:color/holo_green_dark"
        android:text="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@android:color/holo_purple"
        android:text="3"/>




</luo.bing.com.bingproject.testView.CustomImgContainer>
